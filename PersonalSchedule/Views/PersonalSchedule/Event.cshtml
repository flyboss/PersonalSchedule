@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>创建活动</title>
    <link rel="stylesheet" href="/themes/default/easyui.css" />
    <link rel="stylesheet" href="/themes/icon.css" />
    <link rel="stylesheet" href="/Styles/demo.css" />
    <link rel="stylesheet" href="/Styles/bootstrap.css" />
    <link rel="stylesheet" href="/Styles/font-awesome.min.css" />
    <link rel="stylesheet" href="/Styles/style.css" />

    <script src="/Scripts/jquery.min.js"></script>
    <script src="/Scripts/jquery.easing.1.3.js"></script>
    <script src="/Scripts/jquery.waypoints.min.js"></script>
    <script src="/Scripts/jquery.easyui.min.js"></script>
    <script src="/Scripts/underscore-min.js"></script>
    <script src="/Scripts/moment.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/main.js"></script>
    <script>
        var handleUrl = window.location.href;
    </script>
</head>
<body>
    <form>
        <div class="box-wrap">
            <header role="banner" id="fh5co-header" style="background-image:url('/img/header.jpg')">
                <div class="container">
                    <nav class="navbar navbar-default" style="background:rgba(0,0,0,0)">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="fh5co-navbar-brand">
                                    <span class="logo"><a href="/PersonalSchedule/Index">日程中心</a></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <ul class="nav text-center">
                                    <li><a href="/PersonalSchedule/Cal">我的日历</a></li>
                                    <li><a href="/PersonalSchedule/NewEvent">创建活动</a></li>
                                    <li><a href="/PersonalSchedule/Search">搜索活动</a></li>
                                </ul>
                            </div>
                            <div class="col-md-3">
                                <ul class="social">
                                    <li>
                                        <a href="#">
                                            <img src="/img/user/@Session["login_id"]_.png" onerror="imgThisErrorSrc(this,'/img/default/default-user-0.png')" class="my-img-round" alt="(。・`ω´・)" width="48" height="48" />
                                            <span class="user-name">html</span>
                                        </a>
                                    </li>
                                    <li><a href="/PersonalSchedule/Index"><span class="glyphicon glyphicon-log-in" id="logout_btn">返回</span></a></li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </header>
            <div class="container">
                <div class="col-md-8 new-event-left-body">
                    <div class="row time-list-div" id="time_list_div">
                    </div>
                    <div class="row text-editer-div" id="main_show_div">
                        <h1>@ViewBag.event_title</h1>
                        <br/>
                    </div>
                </div>
                <div class="col-md-3 col-md-offset-1 new-event-right-body">
                    <div class="owner-mark-div" id="owner_mark_div">
                    </div>
                    <div class="row link-list-div" id="link_list_div">
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script>
        var link_list_json = '@ViewBag.link_list';
        var action_list_json = '@ViewBag.action_list';
        showOwnerAndMarkOnEvent('@ViewBag.marked','@ViewBag.owner_id','@ViewBag.owner_name','@Session["login_id"]','@ViewBag.event_id');
        addActionShowDiv(JSON.parse(html_decode(action_list_json)));
        addLinkShowDiv(JSON.parse(html_decode(link_list_json)));
        document.getElementById("main_show_div").innerHTML += transValidateToDomStr('@ViewBag.event_content');
    </script>
</body>

</html>